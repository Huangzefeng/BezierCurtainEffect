<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/haibao2"
    >


  <include
      layout="@layout/main_head"
      android:id="@+id/layout_main_head"
      />

  <ImageView
      android:id="@+id/img_1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/layout_main_head"
      android:scaleType="fitXY"
      android:src="@drawable/gg1"
      />

  <com.example.curtaineffect.view.CurtainDownView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/img_1"
      />

</RelativeLayout>